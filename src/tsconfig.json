{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "../dist",
    "paths": {
      "ngx-dropzone-wrapper/*": [
        "../dist/index.js"
      ]
    },
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "../node_modules/@types"
    ],
    "types": [
      "node",
      "dropzone"
    ]
  },
  "files": [
    "index.ts",
    "lib/dropzone.module.ts",
    "lib/dropzone.component.ts",
    "lib/dropzone.directive.ts",
    "lib/dropzone.interfaces.ts"
  ],
  "angularCompilerOptions": {
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true
  },
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true
  }
}
