{
  "name": "ngx-dropzone-wrapper",
  "description": "Angular wrapper library for Dropzone",
  "bugs": "https://github.com/zefoy/ngx-dropzone-wrapper/issues",
  "license": "MIT",
  "version": "5.0.0-5",
  "main": "bundles/ngx-dropzone-wrapper.umd.js",
  "module": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "tslint": {
    "extends": "./tslint.json"
  },
  "stylelint": {
    "extends": "./stylelint.json"
  },
  "scripts": {
    "init": "npm install",
    "start": "npm run build ; npm run inline",
    "watch": "watch 'npm run build' src/",
    "clean": "rm -rf dist bundles node_modules",
    "lint": "npm run lint:ts && npm run lint:scss",
    "build": "npm run build:umd && npm run build:aot",
    "deploy": "npm run build && npm run inline && npm publish",
    "inline": "ng2-inline --compress -b dist/lib/ -o ./ \"dist/lib/*.js\"",
    "lint:ts": "tslint -p src/tsconfig.json 'src/**/*.ts'",
    "lint:scss": "stylelint --syntax scss 'src/**/*.scss'",
    "build:js": "ngc -p src/tsconfig.json",
    "build:css": "node-sass src/ -o dist/ --source-map=true",
    "build:html": "cpx src/lib/*.html dist/lib/",
    "build:umd": "webpack --config config/webpack.config.js",
    "build:aot": "npm run build:html && npm run build:css && npm run build:js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zefoy/ngx-dropzone-wrapper.git"
  },
  "dependencies": {
    "dropzone": "^5.2.0"
  },
  "devDependencies": {
    "@angular/common": "^4.4.0",
    "@angular/compiler": "^4.4.0",
    "@angular/compiler-cli": "^4.4.0",
    "@angular/core": "^4.4.0",
    "@angular/platform-browser": "^4.4.0",
    "@ngtools/webpack": "^1.8.0",
    "@types/dropzone": "^5.0.0",
    "@types/node": "^8.0.0",
    "angular2-inline-template-style": "^1.2.0",
    "angular2-template-loader": "^0.6.0",
    "awesome-typescript-loader": "^3.3.0",
    "codelyzer": "^4.0.0",
    "core-js": "^2.5.0",
    "cpx": "^1.5.0",
    "node-sass": "^4.5.0",
    "raw-loader": "^0.5.0",
    "rxjs": "^5.5.0",
    "sass-loader": "^6.0.0",
    "string-replace-loader": "^1.3.0",
    "stylelint": "^8.2.0",
    "stylelint-config-standard": "^17.0.0",
    "stylelint-order": "^0.7.0",
    "tslint": "^5.8.0",
    "typescript": "~2.4.0",
    "uglifyjs-webpack-plugin": "^1.0.0",
    "watch": "^1.0.0",
    "webpack": "^3.8.0",
    "webpack-angular-externals": "^1.0.0",
    "webpack-rxjs-externals": "^1.1.0",
    "zone.js": "^0.8.0"
  },
  "peerDependencies": {
    "@angular/common": ">=4.0.0",
    "@angular/core": ">=4.0.0"
  }
}
